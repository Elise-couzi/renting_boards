<div class="container">
  <div style="margin: 50px"></div>

  <div class="row">
    <div class="col-lg-5">
      <p><%= image_tag @board.images, alt: "image", width: 400 %></p>
    </div>
    <div class="col-lg-7">
      <h1><%= @board.name %></h1>
      <h3><%= @board.price %>â‚¬</h3>
        <div class="form-wrapper" style="width: 600px; ">
