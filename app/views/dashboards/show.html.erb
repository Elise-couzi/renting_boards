
  <div class ="container">
    <div class ="dashboard-container">
      <div class = "row">
        <div class ="col-12">
          <h1> Mes demandes </h1>
        </div>
      </div>
      <div class ="row">
      <% @user.bookings.each do |booking| %>
        <div class ="col-4">
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%=booking.board.images%>">
            <div class="card-body">
              <h5 class="card-title"><%= booking.board.name %></h5>
              <p class="card-text"><%= booking.board.description %></p>
              <a class="btn btn-info">Statut de ma demande effectuée : <%= booking.state %></a>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
        <div class ="dashboard-container">
      <div class = "row">
        <div class ="col-12">
          <h1> Mes locations </h1>
        </div>
      </div>
      <div class ="row">
      <% @user.boards.each do |board| %>
      <% board.bookings.each do |booking| %>
        <div class ="col-4">
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%=booking.board.images%>">
            <div class="card-body">
              <h5 class="card-title"><%= booking.board.name %></h5>
              <p class="card-text">Location du <%= booking.start_at.strftime("%d/%m/%Y") %> au <%= booking.end_at.strftime("%d/%m/%Y") %></p>
              <a class="btn btn-info">Statut de ma demande reçu : <%= booking.state %></a>
                <% if booking.state == "en attente" %>
                <div class = "bouton-choix">
                <p class="btn btn-success"><%= link_to "Valider", validated_path(booking), method: :patch %></p>
                <p class="btn btn-warning"><%= link_to "Refuser", declined_path(booking), method: :patch %></p>
                </div>
                <% else %>
                <% end %>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
    
  </div>
