<div class="container">
  <h1>Add a new board</h1>

  <%= simple_form_for @board do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

  <div><%= link_to '< Boards', boards_path, class: 'btn btn-flat' %></div>
</div>
